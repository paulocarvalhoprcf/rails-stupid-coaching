<div class="card">
  <div class="card-header">
    <blockquote class="blockquote mb-0">
      <h2><%= @question%></h2>
      <footer class="blockquote-footer"><em>You<em></footer>
    </blockquote>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <h2><strong><%= @answer%></strong></h2>
